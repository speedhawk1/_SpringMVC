<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <insert id="create" parameterType="model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO test.user VALUES (NULL, #{username}, #{password})
    </insert>
    <select id="login" parameterType="model.User" resultType="model.User">
        SELECT *
        FROM test.user
        WHERE username = #{username} AND password = #{password}
    </select>
    <select id="queryUserByUsername" parameterType="model.User" resultType="model.User">
        SELECT *
        FROM test.user
        WHERE username = #{username}
    </select>
</mapper>